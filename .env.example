# Example environment variables for reproducing the project locally
# Copy to `.env` and edit values before running the stack or app.

# Database (used by app/database.py)
DATABASE_URL=ADD YOUR_DATABASE_URL_HERE

# Postgres container credentials
POSTGRES_USER=ADD YOUR_POSTGRES_USER_HERE
POSTGRES_PASSWORD=ADD YOUR_POSTGRES_PASSWORD_HERE
POSTGRES_DB=ADD YOUR_POSTGRES_DB_HERE
POSTGRES_PORT=ADD YOUR_POSTGRES_PORT_HERE

# FastAPI settings
API_BASE=ADD YOUR_API_BASE_HERE

# Prometheus (scrape interval in seconds)
PROMETHEUS_SCRAPE_INTERVAL=15s

# Seed Worker settings
INTERVAL_S=ADD YOUR_INTERVAL_S_HERE
SEED=ADD YOUR_SEED_HERE
CYCLE_S=ADD YOUR_CYCLE_S_HERE
WORKER_ID=ADD YOUR_WORKER_ID_HERE
AUTH_TOKEN=ADD YOUR_AUTH_TOKEN_HERE

# API wait settings
API_WAIT_TIMEOUT=ADD YOUR_API_WAIT_TIMEOUT_HERE
API_WAIT_INTERVAL=ADD YOUR_API_WAIT_INTERVAL_HERE

# Grafana settings
GF_SECURITY_ADMIN_USER=ADD YOUR_GRAFANA_ADMIN_USER_HERE
GF_SECURITY_ADMIN_PASSWORD=ADD YOUR_GRAFANA_ADMIN_PASSWORD_HERE
GF_USERS_ALLOW_SIGN_UP=ADD YOUR_GRAFANA_ALLOW_SIGN_UP_HERE

# Other settings
DEBUG_MODE=ADD YOUR_DEBUG_MODE_HERE
SECRET=ADD YOUR_SECRET_HERE
